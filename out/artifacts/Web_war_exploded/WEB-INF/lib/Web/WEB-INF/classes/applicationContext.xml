<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:aop="http://www.springframework.org/schema/aop"
	   xmlns:tx="http://www.springframework.org/schema/tx" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
		<bean id="bookAction" scope="prototype" class="com.tutorialspoint.struts2.action.BookSpringAction">
		<property name="service" ref="serviceimpl"></property>
			<property name="bookMapper" ref="BookMapper"></property>
	</bean>
	<bean id="uploadAction" class="com.tutorialspoint.struts2.action.uploadAction">
	</bean>
	<bean id="CookieAction" class="com.tutorialspoint.struts2.action.CookieAction">
		<property name="service" ref="userimpl"></property>
	</bean>

	<bean id="TeacherAction" class="com.tutorialspoint.homework.action.TeacherAction">
		<property name="service" ref="TeacherServiceImpl"></property>
	</bean>
	<bean id="TeacherServiceImpl" class="com.tutorialspoint.homework.Service.TeacherServiceImpl">
		<property name="dao" ref="daoimpl"></property>
	</bean>

	<bean id="StudentAction" class="com.tutorialspoint.homework.action.StudentAction">
		<property name="service" ref="StudentServiceImpl"></property>
	</bean>
	<bean id="StudentServiceImpl" class="com.tutorialspoint.homework.Service.StudentServiceImpl">
		<property name="dao" ref="daoimpl"></property>
	</bean>

	<bean id="serviceimpl" class="com.tutorialspoint.struts2.action.IBookServiceImpl">
	<property name="dao" ref="daoimpl"></property>
	</bean>
	<bean id="userAction" class="com.tutorialspoint.struts2.action.UserAction">
	<property name="service" ref="userimpl"></property>
	</bean>
	<bean id="userimpl" class="com.tutorialspoint.struts2.action.UserServiceImpl">
	<property name="dao" ref="daoimpl"></property></bean>
	<bean id="daoimpl" class="com.tutorialspoint.struts2.dao.BaseDao"></bean>
	<bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
			</props>
		</property>
	</bean>
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>

	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/newtable" />
		<property name="username" value="root"></property>
		<property name="password" value="root"></property>
	</bean>

	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="configLocation" value="classpath:mybatis-config.xml" />
		<property name="dataSource" ref="dataSource" />
	</bean>


	<bean id="BookMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="com.tutorialspoint.struts2.dao.BookMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>

</beans>